<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/shop.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.12.1/font/bootstrap-icons.min.css">
    <title>My Shop</title>
</head>

<body>
    <nav>
        <div class="logo"><a href="/">LOGO</a></div>

        <div class="menu">
            <ul>
                <li><a href="/"><i class="bi bi-house"></i></a></li>
                <li><a href="cart"><i class="bi bi-cart"></i></a></li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <section>
            <div class="item">
                <h1>Sell Your Teto</h1>

                <div class="sell-container">
                    <form action="sell" method="post" class="sell-form">
                        <h3>image URL</h3>
                        <input type="text" id="url" name="img">
                        <h3>name</h3>
                        <input type="text" id="name" name="name">
                        <h3>price</h3>
                        <input type="number" id="price" name="price">

                        <button type="submit">Publish</button>
                    </form>

                    <div class="example">
                        <div class="grid-item">
                            <div class="img-con">
                                <img src="https://cdn.donmai.us/original/81/d5/81d5c9bbe157d5ab94507ad166b3dc9f.jpg" alt="" id="imgsrc">
                            </div>
                            <div class="infoCart">
                                <div class="info">
                                    <p class="name" id="nameOutput">...</p>
                                    <p class="price" id="priceOutput">0$</p>
                                </div>
                                <div class="cart">
                                    <button><i class="bi bi-cart"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
<script>
    const url = document.getElementById('url')
    const name = document.getElementById('name')
    const price = document.getElementById('price')

    const imgsrc = document.getElementById('imgsrc')
    const nameOutput = document.getElementById('nameOutput')
    const priceOutput = document.getElementById('priceOutput')

    name.addEventListener('input',()=>{
        nameOutput.textContent = name.value
    })
    price.addEventListener('input',()=>{
        priceOutput.textContent = price.value+ ' $'
    })

    url.addEventListener('input',()=>{
        imgsrc.src=url.value 
    })


</script>


</html>